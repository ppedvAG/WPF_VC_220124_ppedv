<Window x:Class="DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="376" Width="290">
    <StackPanel>
        <StackPanel x:Name="Spl_DataContextBsp" Margin="5">
            <StackPanel.DataContext>
                <local:Person Vorname="Anna" Nachname="Nass" Alter="35"/>
            </StackPanel.DataContext>

            <TextBox Text="{Binding Path=Vorname}"/>
            <TextBlock Text="{Binding Nachname}"/>
            <TextBlock Text="{Binding Alter}"/>
            <TextBlock Text="{Binding WichtigeTage[0].Year}"/>

            <Button Content="Show" Click="Button_Click"/>
            <Button Content="Altern" Click="Button_Click_1"/>

        </StackPanel>


        <ListBox x:Name="Lbx_Personen" Height="100"
                 ItemsSource="{Binding Personenliste}"/>
        <Button Content="Add" x:Name="Btn_Add" Click="Btn_Add_Click"/>
        <Button Content="Delete" x:Name="Btn_Delete" Click="Btn_Delete_Click"/>

    </StackPanel>
</Window>
